#!/usr/bin/env bash

# Define the file to update
HOSTS_FILE="/etc/hosts"

# Backup the current /etc/hosts file
cp $HOSTS_FILE ${HOSTS_FILE}.bak

# Add entries to the /etc/hosts file
{
    echo "127.0.0.2   localhost"
    echo "8.8.8.8     facebook.com"
} >> $HOSTS_FILE

echo "Updated $HOSTS_FILE with the required entries."
